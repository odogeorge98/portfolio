{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true,

    "allowJs": true,
    "jsx": "react-jsx",

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "types": []
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
